<h2>Our Stockists...</h2>

<hr>

<!-- Create Stockist -->
<% if admin_signed_in? %>
  <%= link_to 'Create Stockist +', new_stockist_path, :class => 'btn btn-success btn-sm' %><br>
<% end %>

<!-- Page Text (Stockist Content) -->
<p><%= markdown_to_html(@body) %></p>

<table class="table table-striped">
  <!-- column headings -->
  <th>Name</th>  
  <th>Region</th>
  <th>Locations</th>
  <% if admin_signed_in? %>
    <th>Edit</th>
    <th>Delete</th>
  <% end %>
  <!-- row data -->
  <% @stockists.each do |stock| %>
    <tr>
      <td><%= link_to stock.name, stock.link, :target => '_blank' %></td>
      <td><%= stock.region %></td>
      <td><%= stock.locations %></td>
      <% if admin_signed_in? %>
        <td><%= link_to 'edit', edit_stockist_path(stock), :class => 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'delete', stockist_path(stock), :method => 'delete', :class => 'btn btn-danger btn-xs', :confirm => 'Are you sure you wish to delete?' %></td>
      <% end %>
    </tr>
  <% end %>
</table><br>