<!-- Show errors on invalid form data -->
<% if @stockist.errors.any? %>
  <div class="alert alert-danger">
    <p><b>Error:</b> Your Article could not be saved:</p>
    <ul>
      <% @stockist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!-- Form -->
<%= form_for @stockist, :class => "form-horizontal", :html => {:role => 'form'} do |f| %>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :class => "form-control" %>
</div>
<div class="form-group">
  <%= f.label :link %>
  <%= f.text_field :link, :class => "form-control" %>
  <p>Note: must be in the format http://xxx</p>
</div>
<div class="form-group">
  <%= f.label :region %>
  <%= f.text_field :region, :class => "form-control" %>
</div>
<div class="form-group">
  <%= f.label :locations %>
  <%= f.text_field :locations, :class => "form-control" %>
</div>
<%= f.submit :class => "btn btn-default" %>
<% end %><br>
<!-- Navigate back with warning -->
<%= link_to 'Back', stockists_path, :class => 'btn btn-info btn-sm', :confirm => 'Are you sure you wish to go back? Any changes you have made since you last saved will be lost.' %>