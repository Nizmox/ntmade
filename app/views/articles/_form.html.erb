<% if @article.errors.any? %>
  <p>There were problems saving your article:</p>
  <ul>
    <% @article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
<% end %>

<%= form_for @article, :class => "form-horizontal", :html => {:role => 'form'} do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, :class => "form-control", :rows => 10 %>
  </div>
  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_field :caption, :class => "form-control" %>
  </div>
  <%= f.submit :class => "btn btn-default" %>
<% end %><br>