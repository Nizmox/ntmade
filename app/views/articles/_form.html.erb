<!-- Show errors on invalid form data -->
<% if @article.errors.any? %>
  <div class="alert alert-danger">
    <p><b>Error:</b> Your Article could not be saved:</p>
    <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!-- Form -->
<%= form_for @article, :class => "form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content.to_s + ' (with Kramdown styling)'%>
    <%= f.text_area :content, :class => "form-control", :rows => 10 %>
  </div>
  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_field :caption, :class => "form-control" %>
  </div>
  <%= f.submit :class => "btn btn-default" %>
<% end %><br>
<!-- Kramdown styling link -->
<%= link_to 'Kramdown Syntax Reference', 'http://kramdown.gettalong.org/syntax.html', :target => '_blank' %> - A guide on how to style this content.<br><br>
<!-- Navigate back with warning -->
<%= link_to 'Back', articles_path, :class => 'btn btn-info btn-sm', :confirm => 'Are you sure you wish to go back? Any changes you have made since you last saved will be lost.' %>