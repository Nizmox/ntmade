<% if @article.errors.any? %>
  <p>There were problems saving your article:</p>
  <ul>
    <% @article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.label :caption %>
    <%= f.text_field :caption %>
  </div>
  <%= f.submit %>
<% end %>