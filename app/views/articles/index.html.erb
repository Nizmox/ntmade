<h2>Articles</h2>

<% if admin_signed_in? %>
  <%= link_to 'Create Article', new_article_path %>
<% end %>

<% @articles.each do |article| %>
<ul>
  <li><b>Title: </b><%= link_to article.title, article_path(article) %></li>
  <li><b>Created: </b><%= article.created_at %></li>
  <li><b>Author: </b><%= article.admin.email %></li>
  <% if admin_signed_in? %>
    <li>
      <b>Admin: </b>
      <%= link_to 'edit', edit_article_path(article) %> / 
      <%= link_to 'delete', article_path(article), :method => 'delete' , :confirm => 'Are you sure?' %>
    </li>
  <% end %>
</ul>
<% end %>