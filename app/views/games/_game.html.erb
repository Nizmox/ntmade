<ul>
  <li><b>Title: </b><%= game.name %></li>
  <li><%= markdown_to_html(game.description) %></li>
  <li><b>Status: </b><%= game.status %></li>
  <% if admin_signed_in? %>
    <li>
      <b>Admin: </b>
      <%= link_to 'edit', edit_game_path(game) %> / 
      <%= link_to 'delete', game_path(game), :method => 'delete' , :confirm => 'Are you sure?' %>
    </li>
  <% end %>
</ul>