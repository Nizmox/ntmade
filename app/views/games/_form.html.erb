<!-- Show errors on invalid form data -->
<% if @game.errors.any? %>
  <div class="alert alert-danger">
    <p><b>Error:</b> Your Game could not be saved:</p>
    <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
  </div>
<% end %>
<!-- Form -->
<%= form_for @game, :class => "form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description.to_s + ' (with Kramdown styling)' %>
    <%= f.text_area :description, :class => "form-control", :rows => 10 %>
  </div>
  <div class="form-group">
    <%= f.label :status %>
    <%= f.text_field :status, :class => "form-control" %>
  </div>
  <%= f.submit :class => "btn btn-default" %>
<% end %><br>
<!-- Kramdown styling link -->
<%= link_to 'Kramdown Syntax Reference', 'http://kramdown.gettalong.org/syntax.html', :target => '_blank' %> - A guide on how to style this content.<br><br>
<!-- Navigate back with warning -->
<%= link_to 'Back', games_path, :class => 'btn btn-info btn-sm', :confirm => 'Are you sure you wish to go back? Any changes you have made since you last saved will be lost.' %>