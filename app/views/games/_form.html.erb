<% if @game.errors.any? %>
  <p>There were problems saving your game:</p>
  <ul>
    <% @game.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
<% end %>

<%= form_for @game do |f| %>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>
<div>
  <%= f.label :status %>
  <%= f.text_field :status %>
</div>
<%= f.submit %>
<% end %>